<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Facebook Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="77.0"/>
    <parameter name="url" value="https://www.facebook.com"/>

    <test name = "Facebook Home">
        <classes>
            <class name="home.TestFacebook"/>
            <class name="home.DatabaseSearchFriends"/>
            <class name="home.TestLoginPage"/>
            <class name="home.TestFacebookDropDown"/>
            <class name="home.TestFacebookscreenshot"/>
        </classes>
    </test>

</suite>